    "overlay-kit": "1.8.6",
    "react": "^18",
    "react-dom": "^18",
    "react-error-boundary": "^6.1.1",
    "react-i18next": "^16.5.4",
    "react-router-dom": "^7.1.1",
    "ts-pattern": "^5.9.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.18.0",
    "@playwright/test": "^1.58.2",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
